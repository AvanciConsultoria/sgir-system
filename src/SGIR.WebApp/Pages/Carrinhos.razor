@page "/carrinhos"
@using Microsoft.EntityFrameworkCore
@using SGIR.Core.Entities
@using SGIR.Infrastructure.Data
@inject SGIRDbContext DbContext

<PageTitle>Carrinhos - SGIR</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>üõí Gerenciamento de Carrinhos</h2>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-primary" disabled>
                ‚ûï Novo Carrinho (Em breve)
            </button>
        </div>
    </div>

    <div class="alert alert-info">
        <h5>üöß P√°gina em Desenvolvimento</h5>
        <p class="mb-0">Esta p√°gina est√° sendo desenvolvida e estar√° dispon√≠vel em breve.</p>
        <hr>
        <p class="mb-0"><strong>Funcionalidades previstas:</strong></p>
        <ul class="mb-0">
            <li>Criar carrinhos organizacionais</li>
            <li>Adicionar caixas de ferramentas a carrinhos</li>
            <li>Adicionar m√°quinas/equipamentos diretamente</li>
            <li>Controle de estoque integrado</li>
        </ul>
    </div>

    <!-- Listagem de carrinhos existentes -->
    <div class="card mt-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">üìä Carrinhos Cadastrados</h5>
        </div>
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center p-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Carregando...</span>
                    </div>
                </div>
            }
            else if (!carrinhos.Any())
            {
                <div class="alert alert-warning mb-0">
                    ‚ö†Ô∏è Nenhum carrinho cadastrado ainda.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>C√≥digo</th>
                                <th>Descri√ß√£o</th>
                                <th>Tipo</th>
                                <th>Itens</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var carrinho in carrinhos)
                            {
                                <tr>
                                    <td><span class="badge bg-primary">@carrinho.Codigo</span></td>
                                    <td>@carrinho.Descricao</td>
                                    <td><span class="badge bg-info">@carrinho.Tipo</span></td>
                                    <td>@carrinho.Itens?.Count ?? 0</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Carrinho> carrinhos = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await CarregarCarrinhos();
    }

    private async Task CarregarCarrinhos()
    {
        try
        {
            isLoading = true;
            carrinhos = await DbContext.Carrinhos
                .Include(c => c.Itens)
                .OrderBy(c => c.Codigo)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar carrinhos: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}