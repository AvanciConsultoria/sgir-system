@page "/ferramentas"
@using SGIR.Core.Entities
@using SGIR.Core.Interfaces
@inject IUnitOfWork UnitOfWork

<PageTitle>Ferramentas e Insumos - SGIR</PageTitle>

<div class="card mb-4">
    <div class="card-header">
        <h3>üî® Ferramentas e Insumos</h3>
        <button class="btn btn-primary" @onclick="AbrirModal">
            ‚ûï Nova Ferramenta
        </button>
    </div>
    <div class="card-body">
        @if (isLoading)
        {
            <div class="text-center">
                <p>Carregando ferramentas...</p>
            </div>
        }
        else if (!itens.Any())
        {
            <div class="alert alert-info">
                <strong>‚ÑπÔ∏è Nenhuma ferramenta cadastrada</strong>
                <p style="margin: 0.5rem 0 0 0;">
                    Clique em "Nova Ferramenta" para adicionar itens ao estoque.
                </p>
            </div>
        }
        else
        {
            <!-- Filtros -->
            <div class="flex gap-2 mb-3">
                <div class="form-group" style="flex: 1;">
                    <input type="text" 
                           class="form-control" 
                           placeholder="üîç Buscar por descri√ß√£o..."
                           @bind="filtroDescricao"
                           @bind:event="oninput"
                           @onkeyup="FiltrarItens" />
                </div>
                <div class="form-group" style="width: 250px;">
                    <select class="form-control form-select" @bind="filtroCategoria" @onchange="FiltrarItens">
                        <option value="">Todas as categorias</option>
                        @foreach (var cat in categorias)
                        {
                            <option value="@cat">@cat</option>
                        }
                    </select>
                </div>
                <div class="form-group" style="width: 200px;">
                    <select class="form-control form-select" @bind="filtroStatus" @onchange="FiltrarItens">
                        <option value="todos">Todos os status</option>
                        <option value="criticos">‚ö†Ô∏è Cr√≠ticos</option>
                        <option value="ok">‚úÖ Estoque OK</option>
                    </select>
                </div>
            </div>

            <!-- Estat√≠sticas -->
            <div class="stats-grid mb-4">
                <div class="stat-card blue">
                    <div class="stat-icon">üì¶</div>
                    <div class="stat-info">
                        <div class="stat-label">Total de Itens</div>
                        <div class="stat-value">@itensFiltrados.Count()</div>
                    </div>
                </div>
                <div class="stat-card warning">
                    <div class="stat-icon">‚ö†Ô∏è</div>
                    <div class="stat-info">
                        <div class="stat-label">Itens Cr√≠ticos</div>
                        <div class="stat-value">@itensFiltrados.Count(i => i.EstoqueAbaixoMinimo())</div>
                    </div>
                </div>
                <div class="stat-card success">
                    <div class="stat-icon">üí∞</div>
                    <div class="stat-info">
                        <div class="stat-label">Valor Total</div>
                        <div class="stat-value">@FormatarValor(itensFiltrados.Sum(i => (i.ValorUnitario ?? 0) * i.EstoqueAtual))</div>
                    </div>
                </div>
            </div>

            <!-- Tabela -->
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Descri√ß√£o</th>
                            <th>Categoria</th>
                            <th>Fabricante</th>
                            <th>Modelo/PN</th>
                            <th style="text-align: center;">Estoque Atual</th>
                            <th style="text-align: center;">Estoque M√≠nimo</th>
                            <th style="text-align: center;">Status</th>
                            <th>Local</th>
                            <th style="text-align: right;">Valor Unit.</th>
                            <th style="text-align: center;">A√ß√µes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in itensFiltrados.Take(100))
                        {
                            <tr>
                                <td>
                                    <strong>@item.Descricao</strong>
                                    @if (!string.IsNullOrEmpty(item.OBS))
                                    {
                                        <div style="font-size: 0.75rem; color: var(--secondary-gray); margin-top: 0.25rem;">
                                            üí¨ @item.OBS
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Categoria))
                                    {
                                        <span class="badge badge-primary">@item.Categoria</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@(item.Fabricante ?? "-")</td>
                                <td>@(item.ModeloPN ?? "-")</td>
                                <td style="text-align: center;">
                                    <strong>@item.EstoqueAtual</strong>
                                    <span class="text-muted" style="font-size: 0.75rem;">@item.Unidade</span>
                                </td>
                                <td style="text-align: center;">
                                    @if (item.EstoqueMinimo.HasValue)
                                    {
                                        <span>@item.EstoqueMinimo.Value</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td style="text-align: center;">
                                    @if (item.EstoqueAbaixoMinimo())
                                    {
                                        <span class="badge badge-danger">‚ö†Ô∏è CR√çTICO</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">‚úÖ OK</span>
                                    }
                                </td>
                                <td>
                                    <span style="font-size: 0.875rem;">@(item.LocalPosse ?? "-")</span>
                                </td>
                                <td style="text-align: right;">
                                    @if (item.ValorUnitario.HasValue)
                                    {
                                        <strong>@FormatarValor(item.ValorUnitario.Value)</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td style="text-align: center;">
                                    <div class="flex gap-1" style="justify-content: center;">
                                        <button class="btn btn-sm btn-outline" @onclick="() => EditarItem(item)">
                                            ‚úèÔ∏è
                                        </button>
                                        <button class="btn btn-sm btn-danger" @onclick="() => ExcluirItem(item)">
                                            üóëÔ∏è
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (itensFiltrados.Count() > 100)
            {
                <div class="alert alert-info mt-3">
                    Mostrando 100 de @itensFiltrados.Count() itens. Use os filtros para refinar a busca.
                </div>
            }
        }
    </div>
</div>

<!-- Modal (placeholder) -->
@if (mostrarModal)
{
    <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; z-index: 9999;" @onclick="FecharModal">
        <div class="card" style="width: 600px; max-width: 90%;" @onclick:stopPropagation="true">
            <div class="card-header">
                <h4>@(itemEditando == null ? "Nova Ferramenta" : "Editar Ferramenta")</h4>
            </div>
            <div class="card-body">
                <p class="text-center text-muted">
                    Formul√°rio de cadastro ser√° implementado em breve.
                </p>
            </div>
            <div class="card-footer">
                <button class="btn btn-secondary" @onclick="FecharModal">Fechar</button>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private bool mostrarModal = false;
    private List<ItemEstoque> itens = new();
    private IEnumerable<ItemEstoque> itensFiltrados = new List<ItemEstoque>();
    private ItemEstoque? itemEditando = null;

    private string filtroDescricao = "";
    private string filtroCategoria = "";
    private string filtroStatus = "todos";
    private List<string> categorias = new();

    protected override async Task OnInitializedAsync()
    {
        await CarregarDados();
    }

    private async Task CarregarDados()
    {
        try
        {
            isLoading = true;
            
            var todosItens = await UnitOfWork.ItensEstoque.GetAllAsync();
            itens = todosItens.OrderBy(i => i.Descricao).ToList();
            
            // Extrair categorias √∫nicas
            categorias = itens
                .Where(i => !string.IsNullOrEmpty(i.Categoria))
                .Select(i => i.Categoria!)
                .Distinct()
                .OrderBy(c => c)
                .ToList();
            
            FiltrarItens();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar ferramentas: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FiltrarItens()
    {
        itensFiltrados = itens.AsEnumerable();

        // Filtro por descri√ß√£o
        if (!string.IsNullOrWhiteSpace(filtroDescricao))
        {
            itensFiltrados = itensFiltrados.Where(i => 
                i.Descricao.Contains(filtroDescricao, StringComparison.OrdinalIgnoreCase) ||
                (i.ModeloPN != null && i.ModeloPN.Contains(filtroDescricao, StringComparison.OrdinalIgnoreCase)) ||
                (i.Fabricante != null && i.Fabricante.Contains(filtroDescricao, StringComparison.OrdinalIgnoreCase))
            );
        }

        // Filtro por categoria
        if (!string.IsNullOrWhiteSpace(filtroCategoria))
        {
            itensFiltrados = itensFiltrados.Where(i => i.Categoria == filtroCategoria);
        }

        // Filtro por status
        if (filtroStatus == "criticos")
        {
            itensFiltrados = itensFiltrados.Where(i => i.EstoqueAbaixoMinimo());
        }
        else if (filtroStatus == "ok")
        {
            itensFiltrados = itensFiltrados.Where(i => !i.EstoqueAbaixoMinimo());
        }

        StateHasChanged();
    }

    private void AbrirModal()
    {
        itemEditando = null;
        mostrarModal = true;
    }

    private void EditarItem(ItemEstoque item)
    {
        itemEditando = item;
        mostrarModal = true;
    }

    private async Task ExcluirItem(ItemEstoque item)
    {
        // TODO: Implementar confirma√ß√£o e exclus√£o
        Console.WriteLine($"Excluir item: {item.Descricao}");
    }

    private void FecharModal()
    {
        mostrarModal = false;
        itemEditando = null;
    }

    private string FormatarValor(decimal valor)
    {
        return valor.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"));
    }
}
