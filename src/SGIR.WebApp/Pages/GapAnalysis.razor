@page "/gap-analysis"
@using SGIR.Core.Entities
@using SGIR.Core.Interfaces
@inject IGapAnalysisService GapService

<PageTitle>Análise de Déficit - SGIR</PageTitle>

<div class="page-hero">
    <h1>Análise de Déficit</h1>
    <p>Itens abaixo do mínimo e prontos para gerar compras automáticas.</p>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-3 text-muted">Calculando déficits...</p>
    </div>
}
else if (!criticos.Any())
{
    <div class="empty-state">
        <h5>Sem déficits detectados</h5>
        <p>Importe o estoque e os recursos necessários para visualizar riscos.</p>
    </div>
}
else
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Itens críticos</span>
            <a class="btn btn-sm btn-outline-light" href="/compras"><span class="oi oi-cart"></span> Ver compras sugeridas</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Estoque atual</th>
                            <th>Estoque mínimo</th>
                            <th>Outros locais</th>
                            <th>Unidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in criticos)
                        {
                            <tr>
                                <td class="fw-bold">@item.Descricao</td>
                                <td>@item.EstoqueAtual</td>
                                <td>@(item.EstoqueMinimo?.ToString() ?? "--")</td>
                                <td>@item.QuantidadeOutrosLocais</td>
                                <td>@(item.Unidade ?? "UN")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private List<ItemEstoque> criticos = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        criticos = await GapService.ObterItensCriticosAsync();
        isLoading = false;
    }
}
